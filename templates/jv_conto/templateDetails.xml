	</positions>

	<languages>
		<language tag="en-GB">en-GB.tpl_jv_conto.ini</language>
	</languages>

	<administration>
    	<languages>
			<language tag="en-GB">admin/en-GB.tpl_jv_conto.ini</language>
		</languages>
    </administration>

	<params>
		<param name="jv_color" type="list" default="lightblue" label="COLOR VARIATION" description="COLOR VARIATION TO USE">
			<option value="lightblue">LIGHTBLUE</option>
			<option value="grey">GREY</option>
		</param>
		<param name="jv_function" type="radio" default="1" label="FUNCTION SHOW" description="FUNCTION SHOW">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="jv_font" type="list" default="3" label="FONT SIZE" description="SELECT FONT SIZE">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
		</param>
		<param name="menutype" type="menu" default="mainmenu" label="MENU MODULE" description="MENU TO SHOW" />
		<param name="jv_menustyle" type="list" default="moo" label="MENU TYPE" description="MENU TYPE">
			<option value="moo">MooMenu</option>
		</param>
		<param name="spacer@" type="spacer" />
		<param name="gzip" type="radio" default="0" label="GZIP COMPRESSION" description="GZIP DESCRIPTION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="spacer@" type="spacer" />
		<param name="jv_footer" type="radio" default="0" label="COPYRIGHT TEMPLATE" description="COPYRIGHT TEMPLATE DESCRIPTION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="jv_footer_text" type="text" size="50" default="Copyright (c) 2008 - 2010 Joomla Templates by JoomlaVision.Com" label=" " description=" " />
		<param name="spacer@" type="spacer" />
		<param name="jv_rtl" type="radio" default="0" label="RTL LANGUAGES" description="RTL LANGUAGES DESCRIPTION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>

</install>